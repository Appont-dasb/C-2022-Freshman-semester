//The job task before that
//Item A job
//Binary one-time equationsï¼ˆäºŒå…ƒä¸€æ¬¡æ–¹ç¨‹ï¼‰
#include<stdio.h>
#include<math.h>
int main ()
{
	float a,b,c;
	float x1,x2;
	float A,B,C,D;
	scanf("%f%f%f",&a,&b,&c);
	A=sqrt(b*b-4*a*c); //deta:âˆ†
	B=(-b+A);
	C=(-b-A);
	D=2*a;
	x1=B/D;
	x2=C/D; //The values of the two solutions
	printf("x1=%.2f,x2=%.2f",x1,x2); //Prints out the results
	return 0;
}


