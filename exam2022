#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>

int main()
{


	int ch = 0 ;
	int cet = 0 ;
	char password[16] = {0};
	printf("è¯·è¾“å…¥å¯†ç ï¼š\n");
	scanf("%s",password);

	while((ch=getchar())!='\n')
	{
		;
	}
        // ç¼“å†²åŒºè¿˜å‰©ä¸€ä¸ª'\n'
	// è¯»å–ä¸‹'\n'
	printf("è¯·ç¡®è®¤å¯†ç (Y\\N)ï¼š\n"); // ä¸¤ä¸ª\\
	cet = getchar() ; // Y/N
	do
	{
		
	if(cet == 'Y')
	{
		printf("ç¡®è®¤æˆåŠŸ\n");
		break;
	}
	else if(cet =='N')
	{
		printf("è¯·å†æ¬¡è¾“å…¥å¯†ç ï¼š\n");
		
	    scanf("%s",password);
		while((ch=getchar())!='\n')
	{
		;
	}
		printf("è¯·å†æ¬¡ç¡®è®¤å¯†ç (Y\\N)ï¼š\n");
		cet = getchar(); //è¿™é‡Œå¦‚è‹¥è¾“å…¥Nï¼Œåˆ™å°†å¾ªç¯ä¸‹å»ï¼Œç›´åˆ°å¯†ç ç¡®è®¤æˆåŠŸã€‚

	}
	}while(cet != 'Y'); //å…ˆå¾ªç¯å†åˆ¤æ–­
	return 0;
}


